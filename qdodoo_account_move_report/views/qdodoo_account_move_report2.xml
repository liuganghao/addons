<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>
        <template id="qdodoo_account_move_report2">
            <t t-call="report.external_layout">
                <t t-foreach='docs' t-as='o'>
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2 class='text-center'>记账凭证</h2>
                        <div class='row'>
                            <div class='col-xs-6 pull-left'>
                                <span>公司名称:</span>
                                <span t-field='o.company_name'/>
                            </div>
                            <div class='col-xs-6 text-right'>
                                <span>凭证号:</span>
                                <span t-field='o.min_number'/>-
                                <span t-field='o.max_number'/>
                            </div>
                            <!--<div class='col-xs-2 text-right'>-->
                            <!--<span>页数:</span>-->
                            <!--<span t-esc="1"/>-->
                            <!--<span>/</span>-->
                            <!--<sapn t-esc="2"/>-->
                            <!--</div>-->
                        </div>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <strong>名称:</strong>
                                    </th>
                                    <th class="text-right">
                                        <strong>科目:</strong>
                                    </th>
                                    <th class="text-right">
                                        <strong>借方:</strong>
                                    </th>

                                    <th class="text-right">
                                        <strong>贷方:</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.report_lines" t-as="line">
                                    <td class="text-center">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.account_name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.debit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.credit"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>


    </data>
</openerp>