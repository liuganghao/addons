<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>
        <record id="qdodoo_stock_in_analytic_wizard_form" model="ir.ui.view">
            <field name="name">入库分析表</field>
            <field name="model">qdodoo.stock.in.analytic.wizard</field>
            <field name="arch" type="xml">
                <form string="入库分析表">
                    <sheet>
                        <div>
                            <label for="company_id" string="公司"/>
                            <field name="company_id"/>
                        </div>
                        <div>
                            <label for="search_choice" string="查询方式"/>
                            <field name="search_choice"/>
                        </div>
                        <div>
                            <label for="year" string="年度" attrs="{'invisible':[('search_choice','not in',(1,2))]}"/>
                            <field name="year" attrs="{'invisible':[('search_choice','not in',(1,2))],'required': [('search_choice', '=', 1)]}"/>
                            <label for="quarter"
                                   attrs="{'invisible':[('search_choice','!=',2)]}"/>
                            <field name="quarter"
                                   attrs="{'invisible':[('search_choice','!=',2)]}"/>
                        </div>
                        <div>
                            <label for="partner_id" string="供应商" attrs="{'invisible':[('search_choice','!=',3)]}"/>
                            <field name="partner_id" attrs="{'invisible':[('search_choice','!=',3)]}"/>
                        </div>
                        <div>
                            <label for="date" string="日期" attrs="{'invisible':[('search_choice','!=',4)]}"/>
                            <field name="date" attrs="{'invisible':[('search_choice','!=',4)]}"/>
                        </div>
                        <group colspan="4" col="4">
                            <field name="start_date"
                                   attrs="{'invisible':[('search_choice','!=',5)]}"/>
                            <field name="end_date"
                                   attrs="{'invisible':[('search_choice','!=',5)]}"/>
                        </group>
                        <div>
                            <label for="product_id"/>
                            <field name="product_id"/>
                        </div>
                    </sheet>
                    <footer>
                        <button string="确定" name="action_done" type="object" class="oe_highlight"/>
                        or
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_qdodoo_stock_in_analytic_wizard" model="ir.actions.act_window">
            <field name="name">采购价格变动表</field>
            <field name="res_model">qdodoo.stock.in.analytic.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="qdodoo_stock_in_analytic_wizard_form"/>
            <field name="target">new</field>
        </record>
        <menuitem icon="STOCK_INDENT" name="入库分析表" action="action_qdodoo_stock_in_analytic_wizard"
                  id="menu_qdodoo_stock_in_analytic_wizard"
                  parent="base.next_id_73"/>

    </data>
</openerp>