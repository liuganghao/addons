<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="amos_action_ir_rule_wizard" model="ir.actions.act_window">
            <field name="name">规则生成器</field>
            <field name="res_model">ir.rule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="base.view_rule_form"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>


        <record id="amos_res_groups_form" model="ir.ui.view">
            <field name="name">amos.res.groups.form.page</field>
            <field name="model">res.groups</field>
            <field name="inherit_id" ref="base.view_groups_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="inherit_base_id"/>
                </xpath>


                <xpath expr="/form/sheet/notebook/page/field[@name='model_access']/tree/field[@name='name']"
                       position="after">
                    <button name="%(amos_action_ir_rule_wizard)d" type="action" string="规则" icon="terp-document-new"
                            context="{'default_model_id':model_id,'default_parent_id': active_id,}"
                            />
                </xpath>

                <xpath expr="//form/sheet/notebook[last()]" position="after">
                    <field name="model_ok"/>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='model_access']" position="before">
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-file-text-o"
                            name="amos_access"
                            context="{'perm': 'perm_read','perm_value': True}">

                        <div>
                            <strong>只读</strong>
                            <span>-</span>
                            <span class="fa font-icons-icon  fa-2x" data-id="fa-minus-circle"></span>
                        </div>
                    </button>
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            name="amos_access"
                            context="{'perm': 'perm_write','perm_value': True}">
                        <div>
                            <strong>修改</strong>
                            <span>-</span>
                            <span class="fa font-icons-icon  fa-2x" data-id="fa-minus-circle"></span>
                        </div>
                    </button>
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-plus"
                            name="amos_access" context="{'perm': 'perm_create','perm_value': True}">
                        <div>
                            <strong>创建</strong>
                            <span>-</span>
                            <span class="fa font-icons-icon  fa-2x" data-id="fa-minus-circle"></span>
                        </div>
                    </button>
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-minus"
                            name="amos_access" context="{'perm': 'perm_unlink','perm_value': True}">
                        <div>
                            <strong>删除</strong>
                            <span>-</span>
                            <span class="fa font-icons-icon  fa-2x" data-id="fa-minus-circle"></span>
                        </div>
                    </button>

                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-cogs"
                            name="amos_access" context="{'perm': 'access_create'}">
                        <div>
                            <strong>生成访问权限</strong>
                        </div>
                    </button>
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-cogs"
                            name="amos_access" context="{'perm': 'access_base'}">
                        <div>
                            <strong>默认Base</strong>
                        </div>
                    </button>
                    <br></br>
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-file-text-o"
                            name="amos_access"
                            context="{'perm': 'perm_read','perm_value': False}">

                        <div>
                            <strong>只读</strong>
                            <span>-</span>
                            <span class="fa font-icons-icon  fa-2x" data-id="fa-times-circle"></span>
                        </div>
                    </button>
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            name="amos_access"
                            context="{'perm': 'perm_write','perm_value': False}">
                        <div>
                            <strong>修改</strong>
                            <span>-</span>
                            <span class="fa font-icons-icon  fa-2x" data-id="fa-times-circle"></span>
                        </div>
                    </button>
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-plus"
                            name="amos_access" context="{'perm': 'perm_create','perm_value': False}">
                        <div>
                            <strong>创建</strong>
                            <span>-</span>
                            <span class="fa font-icons-icon  fa-2x" data-id="fa-times-circle"></span>
                        </div>
                    </button>
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-minus"
                            name="amos_access" context="{'perm': 'perm_unlink','perm_value': False}">
                        <div>
                            <strong>删除</strong>
                            <span>-</span>
                            <span class="fa font-icons-icon  fa-2x" data-id="fa-times-circle"></span>
                        </div>
                    </button>

                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-cogs"
                            name="amos_access" context="{'perm': 'access_unlink'}">
                        <div>
                            <strong>删除访问权限</strong>
                        </div>
                    </button>
                </xpath>


                <xpath expr="/form/sheet/notebook/page/field[@name='menu_access']" position="before">
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-sitemap"
                            name="amos_access"
                            context="{'perm': 'access_menu'}">
                        <div>
                            <strong>生成菜单</strong>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>


        <record id="amos_ir_rule_form" model="ir.ui.view">
            <field name="name">amos.ir.rule.form.page</field>
            <field name="model">ir.rule</field>
            <field name="inherit_id" ref="base.view_rule_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='active']" position="after">
                    <field name="is_rule"/>
                </xpath>
                <xpath expr="//form/sheet/group/group[last()]" position="after">

                    <button name="amos_formula" type="object" class="oe_stat_button"
                            icon="fa-sitemap" string="生成规则"/>

                    <group string="自定义规则" col="6" colspan="4">
                        <field name="rule_amos" nolabel="1">
                            <tree string="规则" editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <!--<field name="name"/>-->
                                <field name="fields_id" domain="[('model_id','=',parent.model_id)]"/>
                                <field name="state"/>
                                <field name="formula"/>
                                <field name="defaults" on_change="onchange_defaults(defaults,fields_id)"/>


                                <button name="amos_action_rule" string="ID" type="object" icon="gtk-go-forward"
                                        help="用户,公司,部门"/>


                            </tree>
                        </field>
                    </group>
                </xpath>

                <xpath expr="//group[@string='Interaction between rules']" position="after">
                    <group string="Domin条件表达式规则">

                        <label colspan="2"
                               string="domain中的单个条件是一个三个元素组成的元组 例：domain=[('hr_expense_ok','=',True)]  最简单的格式：[('字段', '操作符', 值)]"/>
                        <label colspan="2" string="1.第一个是对象的一个column，也就是字段名"/>
                        <label colspan="2"
                               string="2.第二个是比较运算符=, !=, &gt;, &gt;=, &lt;, &lt;=, like, ilike, in, not in, child_of, parent_left, parent_right"/>
                        <label colspan="2" string="3.第三个就是用来比较的值"/>

                        <label colspan="2"
                               string="多个条件用&quot;|&quot;（or），&quot;&amp;&quot;（and），&quot;!&quot;（no）逻辑运算符链接"/>
                        <label colspan="2"
                               string="逻辑运算符作为前缀放置于条件前面&quot;|&quot;与&quot;&amp;&quot;必须两个条件链接，&quot;!&quot;对一个条件取反。默认逻辑运算符为&quot;&amp;&quot;"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
