<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_template_property_form_inherit">
            <field name="name">qdodoo.product.template.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='route_ids']" position="replace">
                    <field name="route_ids" widget="many2many_checkboxes" domain="[('company_id','=',company_id),('product_selectable','=',True)]"/>
                </xpath>

            </field>
        </record>

        <!--创建产品可以选择多公司-->
        <record model="ir.ui.view" id="product_template_only_form_view_inherit">
            <field name="name">qdodoo.product.template.tfs.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_create" invisible="True"/>
                    <field name="company_ids_tfs" placeholder="所属公司..." widget="many2many_tags" attrs="{'invisible':[('is_create','=',True)]}"/>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
